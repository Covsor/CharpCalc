<Window x:Class="CovsorCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CovsorCalc"
        mc:Ignorable="d"
        Title="Курсовая С#" Height="450" Width="800">
    <Grid x:Name="Main_Grid">
        <WrapPanel HorizontalAlignment="Center" Height="35" VerticalAlignment="Top" Width="800" Background="#FFADC6B7">
            <Button x:Name="determ" Content="Определитель матрицы" HorizontalAlignment="Center" Height="35" VerticalAlignment="Center" Width="160" Click="determ_Click"/>
            <Button x:Name="Slau" Content="СЛАУ метод Гаусса" HorizontalAlignment="Center" Height="35" VerticalAlignment="Center" Width="160" Click="Slau_Click"/>
            <Button x:Name="Finding_back_matrix" Content="Поиск обратной матрица" HorizontalAlignment="Center" Height="35" VerticalAlignment="Center" Width="160" Click="Finding_back_matrix_Click"/>
        </WrapPanel>
        <Grid x:Name="Big_Grid" HorizontalAlignment="Center" Height="325" Margin="0,109,0,0" VerticalAlignment="Top" Width="800" Background="#FFE1E0F3">
        </Grid>
        <Grid x:Name="instruct_grid" HorizontalAlignment="Center" Height="79" Margin="0,30,0,0" VerticalAlignment="Top" Width="800"/>


    </Grid>
</Window>
